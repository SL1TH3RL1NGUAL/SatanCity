{
  "mode": "mesh-discovery",
  "target": "sentinels",
  "description": "Discovers and indexes all sentinel chambers in the ritual/chambers directory.",
  "actions": [
    "scan_chambers_directory",
    "filter_sentinel_chambers",
    "build_sentinel_index"
